FROM ubuntu:18.04

RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf && apt-get update
RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf && apt-get -y install golang-go go-dep git

RUN mkdir -p /go/src/github.com/lamarios/trsl8
WORKDIR /go/src/github.com/lamarios/trsl8


ENV GOPATH /go
CMD dep ensure && go build -o trsl8
